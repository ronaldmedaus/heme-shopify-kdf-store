// variables

$spacing: 1rem;
$color-primary: rgba(52, 52, 52, 0.703);
$font-size: 1rem;

// screens
$screen-small: 576px;
$screen-medium: 768px;
$screen-large: 1024px;
$screen-xlarge: 1200px;


// generic

* {
    box-sizing: border-box;
    outline: none;
}


//tools

.fa {
    font-size: $font-size * 1.3;
}

body {
    font-family: Arial, Helvetica, sans-serif;
    font-size: $font-size;
    color: #333;
    height: 1200px;
}

h1 {
    font-size: 2rem;
    margin-bottom: $spacing;
}

h2 {
    font-size: 1.6rem;
    margin-bottom: $spacing;
}

h3 {
    font-size: 1.2rem;
    margin-bottom: $spacing;
}

h4 {
    font-size: 2rem;
    margin-bottom: $spacing;
}


a {
    text-decoration: none;
}

button:hover {
    cursor: pointer;
}

//header

.header {
    background: #bdbbbb;
    position: sticky;
    top: 0;
    display: flex;
    align-items: center;
    max-height: 50px;
    padding: $spacing;

    button,
    a {
        background: none;
        border: none;
        color: $color-primary;
    }
}

.header-navbar {
    display: flex;
    flex: 1;
}


.navbar-toggler {
    cursor: pointer;
}

.navbar {
    width: 70%;
    left: -999px;
    display: block;
    position: absolute;
    top: 100%;
    transition: left 0.4s;

    .navbar-item {
        display: block;
        padding: $spacing;
    }
}

.navbar.open {
    visibility: initial;
    width: 100%;
    height: calc(100% - 52px);
    top: 52px;
    background: #eee;
}

.header-brand {
    display: flex;
    flex: 4;
    justify-content: center;
}

.header-icons {
    flex: 1;
    display: flex;
    justify-content: flex-end;

    a,
    button {
        padding: 10px;
        margin-left: 5px;
        cursor: pointer;
    }
}

// search

.searchbox-content {
    display: none;
    position: absolute;
    width: 100%;
    left: 0;
    top: 100%;
    padding: $spacing;
    background: #eee;
    justify-content: space-between;
    box-shadow: 0 5px 5px rgba(0, 0, 0, 0.2);

    &.show {
        display: flex;
    }

    .search-bar {
        width: 100%;
        display: block;
    }

    .search-groupe {
        border: 1px solid #eee;
    }

    .search-input {
        border: none;
        padding: $spacing;
        font-size: $font-size * 1.5;
    }

    .search-btn {
        padding: $spacing;
        font-size: $font-size * 1.5;
    }
}

