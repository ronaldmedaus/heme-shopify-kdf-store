.slide_viewer {
    height: 340px;
    overflow: hidden;
    position: relative;
}

.slide_group {
    height: 100%;
    position: relative;
    width: 100%;
}

.slide {
    display: none;
    height: 100%;
    position: absolute;
    width: 100%;

    &:first-child {
        display: block;
    }

    &:nth-of-type(1) {
        background: #D7A151;
    }

    &:nth-of-type(2) {
        background: #F4E4CD;
    }

    &:nth-of-type(3) {
        background: #C75534;
    }

    &:nth-of-type(4) {
        background: #6868f2;
    }
}

.slide_buttons {
    left: 0;
    position: absolute;
    right: 0;
    text-align: center;
}

a.slide_btn {
    color: #474544;
    font-size: 42px;
    margin: 0 0.175em;
    -webkit-transition: all 0.4s ease-in-out;
    -moz-transition: all 0.4s ease-in-out;
    -ms-transition: all 0.4s ease-in-out;
    -o-transition: all 0.4s ease-in-out;
    transition: all 0.4s ease-in-out;
}

.slide_btn.active {
    color: #428CC6;
    cursor: pointer;
}

.slide_btn {
    &:hover {
        color: #428CC6;
        cursor: pointer;
    }
}

.directional_nav {
    height: 340px;
    margin: 0 auto;
    max-width: 940px;
    position: relative;
    top: -340px;
}

.previous_btn {
    bottom: 0;
    left: 100px;
    margin: auto;
    position: absolute;
    top: 0;
    cursor: pointer;
    height: 65px;
    opacity: 0.5;
    -webkit-transition: opacity 0.4s ease-in-out;
    -moz-transition: opacity 0.4s ease-in-out;
    -ms-transition: opacity 0.4s ease-in-out;
    -o-transition: opacity 0.4s ease-in-out;
    transition: opacity 0.4s ease-in-out;
    width: 65px;

    &:hover {
        opacity: 1;
    }
}

.next_btn {
    bottom: 0;
    margin: auto;
    position: absolute;
    right: 100px;
    top: 0;
    cursor: pointer;
    height: 65px;
    opacity: 0.5;
    -webkit-transition: opacity 0.4s ease-in-out;
    -moz-transition: opacity 0.4s ease-in-out;
    -ms-transition: opacity 0.4s ease-in-out;
    -o-transition: opacity 0.4s ease-in-out;
    transition: opacity 0.4s ease-in-out;
    width: 65px;

    &:hover {
        opacity: 1;
    }
}

@media only screen and (max-width: 767px) {
    .previous_btn {
        left: 50px;
    }

    .next_btn {
        right: 50px;
    }
}


//footer

.footer {
    background-color: #eee;
}

.footer-item {
    padding: $spacing;
}


.footer-copyright {
    text-align: center;
    padding: $spacing;
}

@media screen and (min-width:$screen-medium) {
    .navbar-toggler {
        display: none;
    }

    .navbar {
        position: relative;
        left: 0;
        transition: none;
        width: 100%;

        .navbar-item {
            display: inline-flex;
            padding: 10px;
        }
    }

    .footer-content {
        display: flex;
        flex-wrap: wrap;
        align-items: center;
    }

    .footer-item {
        display: flex;
        flex-direction: column;
        flex: 1 0 33.33%;
    }
}