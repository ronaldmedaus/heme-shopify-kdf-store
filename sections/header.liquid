<header class="header container">
    <nav class="header-navbar">
        <button class="navbar-toggler" onclick=openMenu();><i class="fa-solid fa-bars"></i></button>
        <ul class="navbar">
        
            {% for link in linklists.main-menu.links %}

            <li class="navbar-item">
                <a href="{{ link.url }}"> {{ link.title }}</a>
            </li>

            {% endfor %}
        </ul>

    </nav>

    <div class="header-brand">
        {% if section.settings.logo %}
        <a href="/"><img src="{{ section.settings.logo | img_url: '400*400' }}" loading="lazy" alt="{{ shop.name .alt}}"></a>
        {% if else %}
        {{ shop.name }}
        {% endif %}
    </div>

    <div class="header-icon">
        <button onclick=searchBox();>
            <i class="fa-brands fa-searchengin"></i>
        </button>
        <a href="/cart">
            <i class="fa-solid fa-cart-arrow-down"></i>
        </a>
    </div>
    
    <div id="searchbox" class="searchbox-content">
        <form action="/search" class="search-bar" role="search">
            <div class="search-group">
                <input type="text" class="search-input" name="q" value="{{ search.terms | escape }}" placeholder="Recherche">
                <button class="search-btn">
                    <i class="fa-solid fa-magnifying-glass"></i>
                </button>
            </div>
        </form> 
        <button  onclick=searchBox(); class="btn-close"><i class="fa-solid fa-times"></i></button>
    </div>
</header>


{% schema %}
{
  "name": "Header",
  "class": "section-header",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "logo"
    }
  ]
}
{% endschema %}
